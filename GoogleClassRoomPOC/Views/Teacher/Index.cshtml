@model IEnumerable<GoogleClassRoomPOC.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h1>Teacher's Room</h1>

<p>
    <a asp-action="CreateCourse">Create New Course</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Class Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section)
            </th>
            <th>
                ClassRoom Url
            </th>
            <th>
                Assignments
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Section)
            </td>
            <td>
                <a href=@item.AlternateLink target="_blank">ClassRoom</a>
            </td>
            <td>
                @Html.ActionLink("Assignments", "GetCourseWorks", new { courseId = item.Id,
               className = item.Name })
            </td>
        </tr>
}
    </tbody>
</table>
