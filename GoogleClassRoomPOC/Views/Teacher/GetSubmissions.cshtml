@model IEnumerable<GoogleClassRoomPOC.Models.Student>

@{
    ViewData["Title"] = "GetSubmissions";
}

<label class="align-content-start font-weight-bold"> Class : 
    <span class="alert-light"> @ViewData["ClassName"]</span>
</label>
 <br />
<label class="align-content-start font-weight-bold "> Section : 
    <span class="alert-light">@ViewData["Section"]</span>
</label>
<br />
<label class="align-content-start font-weight-bold"> Assignment Name : 
  <span class="alert-light">@ViewData["Assignment"]</span>
</label>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assignments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
               <a href=@item.Assignments[0].Url target="_blank"> Go to Drive </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.ActionLink("Assign Grade", "AssignGrade", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
